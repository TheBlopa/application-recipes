#: import utils kivy.utils

<new_ingre>
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icons/diseno.png"
        GridLayout:
            id: test
            cols: 1
            pos_hint: {"top":.85, "left": 1}
            size_hint:1, .15
            Image:
                source: "icons/cooking.png"
        GridLayout:
            id: title
            cols: 1
            pos_hint: {"top":.7, "center_x": .5}
            size_hint:.5, .1
            MyTextInput:
                id: titulo
                hint_text: u'T\u00edtulo'
        ScrollView:
            pos_hint: {"top": .6, "center_x": .5}
            size_hint: .6, .5
            GridLayout:
                id: l_recipe
                size_hint_y: None
                cols: 1
                row_default_height: root.height*.1
                height: self.minimum_height
            
        GridLayout:
            id: grid_test
            cols: 3
            pos_hint: {"top":.1, "center_x": .5}
            size_hint: 1, .1
            ImageButton:
                id: back
                source: "icons/back.png"
                on_release:
                    app.application.change_screen(app,"recipes")
            ImageButton:
                id: home
                source: "icons/home.png"
                on_release:
                    app.application.change_screen(app,"list_recipes")
            ImageButton:
                id: next
                source: "icons/next.png"
                on_release:
                    app.application.change_screen(app,"submit")
        GridLayout:
            cols: 1
            pos_hint: {"top":.25, "center_x": .87}
            size_hint: .2, .1
            ImageButton:
                source: 'icons/add.png'
                on_release:
                    app.application.add_ingre(app)