#: import utils kivy.utils

<new_ingre>
    FloatLayout:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            spacing: 10
            cols: 1
            MDToolbar:
                md_bg_color: app.theme_cls.primary_color
                title: "Mis Recetas"
                elevation: 10
                left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        GridLayout:
            id: title
            cols: 1
            pos_hint: {"top":.85, "center_x": .5}
            size_hint:.5, .1
            MyTextInput:
                id: titulo
                hint_text: u'T\u00edtulo'
        ScrollView:
            pos_hint: {"top": .73, "center_x": .5}
            size_hint: .6, .6
            GridLayout:
                id: l_recipe
                size_hint_y: None
                cols: 1
                row_default_height: root.height*.1
                height: self.minimum_height
            
        GridLayout:
            id: grid_test
            cols: 3
            canvas.before:
                Color: 
                    rgba: .3,.3,.3,1
                Line:
                    width: 1.2
                    rectangle: (self.pos[0],self.pos[1],self.size[0],self.size[1])
                Color: 
                    rgba: .99,.99,.99,1
                Rectangle: 
                    pos: self.pos
                    size: self.size
            pos_hint: {"top":.1, "left": 1}
            pos_hint: {"top":.1, "center_x": .5}
            size_hint: 1, .1
            ImageButton:
                id: back
                source: "icons/back.png"
                on_release:
                    app.application.change_screen(app,"category")
            ImageButton:
                id: home
                source: "icons/home.png"
                on_release:
                    app.application.change_screen(app,"list_recipes")
            ImageButton:
                id: next
                source: "icons/next.png"
                on_release:
                    app.application.change_screen(app,"submit")
        GridLayout:
            cols: 1
            pos_hint: {"top":.25, "center_x": .87}
            size_hint: .2, .1
            ImageButton:
                source: 'icons/add.png'
                on_release:
                    app.application.add_ingre(app)
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer