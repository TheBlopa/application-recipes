#: import utils kivy.utils

<Cooking>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#222a75")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 1
            pos_hint: {"top":1, "left": 1}
            size_hint:1, .2
            Image:
                source: "icons/cooking.png"
        ScrollView:
            pos_hint: {"top": .8, "left":1}
            size_hint: 1, .6
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#1a2059")
                Rectangle:
                    size: self.size
                    pos: self.pos
            GridLayout:
                id: cooking_grid
                cols: 1
                size_hint_y: None
                Label:
                    text: ""
                    id: receta_id
                    font_size: "18sp"
                    text_size: (self.width, None)
                    pading: (20,30)
        GridLayout:
            cols: 2
            pos_hint: {"top":.2, "left": 1}
            size_hint:1, .2
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#1a2059")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icons/back.png"
                on_release:
                    app.change_screen("recipes",'ingredients')
            ImageButton:
                source: "icons/next.png"
                #on_release: