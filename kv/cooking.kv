#: import utils kivy.utils

<Cooking>:
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icons/diseno.png"
        GridLayout:
            id: test
            cols: 1
            pos_hint: {"top":.85, "left": 1}
            size_hint:1, .15
            Image:
                source: "icons/cooking.png"
        ScrollView:
            canvas.before:
                Color: 
                    rgba: rgba('#EDEDED')
                Line: 
                    width: 1.5
                    rectangle: (self.x, self.y, self.width, self.height) 
            pos_hint: {"top": .7, "left":1}
            size_hint: 1, .6
            GridLayout:
                id: cooking_grid
                cols: 1
                size_hint_y: None
                Label:
                    text: ""
                    id: receta_id
                    font_size: "18sp"
                    text_size: (self.width*0.8, None)
                    pading: (20,30)
                    color: (0,0,0,1)
        GridLayout:
            id: grid_test
            cols: 2
            pos_hint: {"top":.1, "left": 1}
            size_hint:1, .1
            ImageButton:
                id: back
                source: "icons/back.png"
                on_release:
                    app.change_screen("ingredients")
            ImageButton:
                id: next
                source: "icons/next.png"