<ListRecipes>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: (.9, .9, .9, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            spacing: 10
            cols: 1
            MDToolbar:
                md_bg_color: app.theme_cls.primary_color
                title: "Mis Recetas"
                elevation: 10
                left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]

        
        GridLayout:
            pos_hint: {"top": .905, "center_x":.5}
            size_hint: .97, .89
            cols: 2
            spacing: 15
            BoxLayout:
                canvas.before:
                    Color: 
                        rgba: .3,.3,.3,1
                    Line:
                        width: 1.2
                        rounded_rectangle: (self.pos[0],self.pos[1],self.size[0],self.size[1],10)
                    Color: 
                        rgba: .99,.99,.99,1
                    RoundedRectangle: 
                        pos: self.pos
                        size: self.size
                        radius: [10]
                orientation: 'vertical'
                cols: 1
                ImageButton:
                    id: meat_button
                    source: "icons/carne.png"
                    on_release:
                        app.application.listado(app,"meat")
                Label:
                    text: "Recetas de carne"
                    font_size: "18sp"
                    color: rgba('#000000')
                    haling: ('center')
                    size_hint_y: None
                    height: dp(30)
