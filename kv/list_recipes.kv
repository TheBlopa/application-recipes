#: import utils kivy.utils

<ListRecipes>:
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icons/diseno.png"

        GridLayout:
            pos_hint: {"top": .85, "left":1}
            size_hint: 1, .8
            cols: 1
            Image:
                source: "icons/recetas.png"
            ImageButton:
                source: "icons/variedad.png"
                id: variety_button
                on_release:
                    app.listado('verduras')
            ImageButton:
                id: meat_button
                source: "icons/carne.png"
                on_release:
                    app.listado('meat')
            ImageButton:
                id: fish_button
                source: "icons/pescado.png"
                on_release:
                    app.listado('fish')            