#: import utils kivy.utils

<MyLabel>:
    valing: 'middle'
    haling: 'center'
    text_size: self.size
    padding: (20,30)

<Recipes>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#5777d9")
            Rectangle:
                size: self.size
                pos: self.pos
        ScrollView:
            GridLayout:
                id: l_recipe
                size_hint_y: None
                cols: 1
                row_default_height: root.height*0.2
                height: self.minimum_height