#: import utils kivy.utils

<Recipes>:
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icons/diseno.png"
        GridLayout:
            id: recipes_image
            cols: 1
            pos_hint: {"top":.85, "left": 1}
            size_hint:1, .15
        ScrollView:
            pos_hint: {"top": .7, "center_x": .5}
            size_hint: .6, .6
            GridLayout:
                id: l_recipe
                size_hint_y: None
                cols: 1
                row_default_height: root.height*0.2
                height: self.minimum_height
        GridLayout:
            cols: 2
            pos_hint: {"top":.1, "left": .1}
            size_hint:1, .1
            ImageButton:
                width: 10
                source: "icons/back.png"
                on_release:
                    app.change_screen("list_recipes")