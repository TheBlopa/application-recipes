#: import utils kivy.utils

<MyCheckBox>
    canvas.before:
        Color:
            rgb: 0,0,0
        Rectangle:
            pos:self.center_x-8, self.center_y-8
            size:[16,16]
        Color:
            rgb: .91, .91, .91
        Rectangle:
            pos:self.center_x-7, self.center_y-7
            size:[14,14]

<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#ffffff")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows: 1
            pos_hint: {"top":1, "left": 1}
            size_hint:1, .1
            ImageButton:
                source: "icons/refresh.png"
                on_release:
                    app.on_start()
            Button:
                text: "[size=30]Recomendacion[/size]"
            	markup: True
                on_release:
                    app.hyperLink()
                id: recomendaciones
            ImageButton:
                source: "icons/Logout.png"
                on_release:
                    app.Logout()
            Label:
                text:"hi"
            CheckBox:

        GridLayout:
            rows: 2
            pos_hint: {"top": .8, "left": 1}
            size_hint:1, .3
            Image:
                source: "icons/fever.png"
                id: ima_temp
            Image:
                source: "icons/bebe_fiebre.png"
                id: ima_fever
            Label:
                text: ""
                id: temp_id
                font_size: "28sp"
            Label:
                text: ""
                id: fever_id
                font_size: "28sp"
            MyCheckBox:    

        ScrollView:
            id: Scroll
            opacity: 1
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#67697C")
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {"top": .45, "left":1}
            size_hint: 1, .2
            GridLayout:
                id: banner_grid
                cols: 1
                size_hint_y: None
                Label:
                    text: ""
                    id: receta_id
                    font_size: "18sp"
                    color: 0,0,0,1
                    text_size: (self.width, None)

        GridLayout:
            rows: 1
            pos_hint: {"top": .2, "left":1}
            size_hint: 1, .11
            Image:
                source: "icons/fever.png"
            ImageButton:
                source: "icons/graph.png"
            Image:
                source: "icons/fever.png"