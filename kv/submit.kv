#: import utils kivy.utils

<Submit>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            spacing: 10
            cols: 1
            MDToolbar:
                md_bg_color: app.theme_cls.primary_color
                title: "Mis Recetas"
                elevation: 10
                left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        GridLayout:
            cols: 1
            pos_hint: {"top":.85, "center_x": .5}
            size_hint:.5, .1
            MyLabel:
                id: title
                text: ''
                color: (0,0,0,1)
        GridLayout:
            pos_hint: {"top": .73, "center_x": .5}
            size_hint: .6, .6
            id: l_recipe
            cols: 1
            TextInput:
                id: cooking_input
                hint_text: "Preparaci\u00F3n"
                canvas.before:
                    Color: 
                        rgba: .3,.3,.3,1
                    Line:
                        width: 1.2
                        rounded_rectangle: (self.pos[0],self.pos[1],self.size[0],self.size[1],18)
                background_color: 0,0,0,0
                padding: (20,10)
                text_size: (self.width, None)
                color: (0,0,0,1)
            
        GridLayout:
            id: grid_test
            cols: 3
            canvas.before:
                Color: 
                    rgba: .3,.3,.3,1
                Line:
                    width: 1.2
                    rectangle: (self.pos[0],self.pos[1],self.size[0],self.size[1])
                Color: 
                    rgba: .99,.99,.99,1
                Rectangle: 
                    pos: self.pos
                    size: self.size
            pos_hint: {"top":.1, "center_x": .5}
            size_hint: 1, .1
            ImageButton:
                id: back
                source: "icons/back.png"
                on_release:
                    app.application.change_screen(app,"new_ingre")
            ImageButton:
                id: home
                source: "icons/home.png"
                on_release:
                    app.application.change_screen(app,"list_recipes")
            Widget:
        GridLayout:
            cols: 1
            pos_hint: {"top":.09, "center_x": .85}
            size_hint: .2, .08
            SmoothButton:
                text: '[color=#000000]Enviar[/color]'
                on_release:
                    app.application.getText(app)
                back_color: (.66, .67, .91, 1)
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer
        