#: import utils kivy.utils

<Submit>:
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icons/diseno.png"
        GridLayout:
            id: test
            cols: 1
            pos_hint: {"top":.85, "left": 1}
            size_hint:1, .15
            Image:
                source: "icons/cooking.png"
        GridLayout:
            cols: 1
            pos_hint: {"top":.7, "center_x": .5}
            size_hint:.5, .1
            MyLabel:
                id: title
                text: ''
                color: (0,0,0,1)
        GridLayout:
            pos_hint: {"top": .6, "center_x": .5}
            size_hint: .6, .5
            id: l_recipe
            cols: 1
            TextInput:
                id: cooking_input
                canvas.before:
                    Color: 
                        rgba: .3,.3,.3,1
                    Line:
                        width: 1.2
                        rounded_rectangle: (self.pos[0],self.pos[1],self.size[0],self.size[1],18)
                background_color: 0,0,0,0
                padding: (20,10)
                text_size: (self.width, None)
                color: (0,0,0,1)
            
        GridLayout:
            id: grid_test
            cols: 3
            pos_hint: {"top":.1, "center_x": .3}
            size_hint: .8, .1
            ImageButton:
                id: back
                source: "icons/back.png"
                on_release:
                    app.change_screen("new_ingre")
            ImageButton:
                id: home
                source: "icons/home.png"
                on_release:
                    app.change_screen("list_recipes")
        GridLayout:
            cols: 1
            pos_hint: {"top":.09, "center_x": .85}
            size_hint: .2, .08
            SmoothButton:
                text: '[color=#000000]Enviar[/color]'
                on_release:
                    app.getText()
                back_color: (.66, .67, .91, 1)
        