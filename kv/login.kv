
<Login>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#35477d")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        TextInput:
            id: login_email
            hint_text: "email"
            size_hint: .8, .1
            pos_hint: {"top": .9, "right": .9}
        TextInput:
            id: login_pass
            password: True
            hint_text: "password"
            size_hint: .8, .1
            pos_hint: {"top": .7, "right": .9}
        Label:
            id:login_message
            color: (1,0,0,1)
            size_hint: .8, .1
            pos_hint: {"top": .4, "right": .9}
        Button:
            text: "[size=40]Iniciar Sesion[/size]"
            markup: True
            size_hint: .8, .1
            pos_hint: {"top": .2, "right": .9}
            on_release:
                app.my_firebase.Registrarse(login_email.text, login_pass.text)