#:include kv/homescreen.kv
#:include kv/list_recipes.kv
#:include kv/login.kv
#:include kv/recipes.kv
#:include kv/ingredients.kv
#:include kv/cooking.kv
#:include kv/test.kv
#:include kv/new_ingre.kv
#:include kv/submit.kv

<MyCheckBox>
    canvas.before:
        Color:
            rgb: 0,0,0
        Rectangle:
            pos:self.center_x-8, self.center_y-8
            size:[22,22]
        Color:
            rgb: .91, .91, .91
        Rectangle:
            pos:self.center_x-7, self.center_y-7
            size:[20,20]
    pos_hint: {"center_y": .5, "center_x": .5}
<MyLabel>
    valing: 'middle'
    haling: 'center'
    text_size: self.size
    padding: (20,30)

<MyTextInput@TextInput>
    canvas.before:
        Color: 
            rgba: .3,.3,.3,1
        Line:
            width: 1.2
            rounded_rectangle: (self.pos[0],self.pos[1],self.size[0],self.size[1],18)
    background_color: 0,0,0,0
    padding: (20,10)
    text_size: (self.width, None)
    color: (0,0,0,1)
    size_hint: (.2, None)
    height: self.minimum_height
    multiline: False

<SmoothButton@Button>
    id: smoothbutton
    background_color: (0,0,0,0)
    backkground_normal: ''
    back_color: (.97, .86, .64, 1)
    markup: True
    text_size: self.width, None
    halign:'center'
    canvas.before:
        Color: 
            rgba: self.back_color
        RoundedRectangle: 
            pos: self.pos
            size: self.size
            radius: [18]

<FloatButton@Button>
    id: float_root
    background_color: (0,0,0,0)
    backkground_normal: ''
    back_color: (.97, .86, .64, 1)
    markup: True
    text_size: self.width, None
    halign:'center'
    canvas.before:
        Color: 
            rgba: self.back_color
        Ellipse: 
            pos: self.pos
            size: self.size
            
        

GridLayout:
    cols: 1
    ScreenManager:
        id: screen_manager
        Login:
            name: "login"
            id: login
        HomeScreen:
            name: "home_screen"
            id: home_screen
        ListRecipes:
            name: "list_recipes"
            id: list_recipes
        Recipes:
            name: "recipes"
            id: recipes
        Ingredients
            name: "ingredients"
            id: ingredients
        Cooking:
            name: "cooking"
            id: cooking
        Test:
            name: "test"
            id: test
        New_ingre:
            name: 'new_ingre'
            id: new_ingre 
        Submit:
            name: 'submit'
            id: submit 
