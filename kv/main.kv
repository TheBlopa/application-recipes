#:include kv/homescreen.kv
#:include kv/list_recipes.kv
#:include kv/login.kv
#:include kv/recipes.kv
#:include kv/ingredients.kv
#:include kv/cooking.kv
#:include kv/test.kv

<MyCheckBox>
    canvas.before:
        Color:
            rgb: 0,0,0
        Rectangle:
            pos:self.center_x-8, self.center_y-8
            size:[22,22]
        Color:
            rgb: .91, .91, .91
        Rectangle:
            pos:self.center_x-7, self.center_y-7
            size:[20,20]
<MyLabel>:
    valing: 'middle'
    haling: 'center'
    text_size: self.size
    padding: (20,30)

<SmoothButton@Button>
    background_color: (0,0,0,0)
    backkground_normal: ''
    back_color: (.97, .86, .64, 1)
    border_radius: [18]
    markup: True
    text_size: self.width, None
    halign:'center'
    canvas.before:
        Color: 
            rgba: self.back_color
        RoundedRectangle: 
            pos: self.pos
            size: self.size
            radius: self.border_radius

GridLayout:
    cols: 1
    ScreenManager:
        id: screen_manager
        Login:
            name: "login"
            id: login
        HomeScreen:
            name: "home_screen"
            id: home_screen
        ListRecipes:
            name: "list_recipes"
            id: list_recipes
        Recipes:
            name: "recipes"
            id: recipes
        Ingredients
            name: "ingredients"
            id: ingredients
        Cooking:
            name: "cooking"
            id: cooking
        Test:
            name: "test"
            id: test
