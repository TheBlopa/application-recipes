#: import utils kivy.utils

<Ingredients>:
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icons/diseno.png"
        GridLayout:
            cols: 1
            pos_hint: {"top":.85, "left": 1}
            size_hint:1, .15
            Image:
                source: "icons/ingredients.png"
                #source: "icons/cooking.png"
        ScrollView:
            canvas.before:
                Color: 
                    rgba: rgba('#EDEDED')
                Line: 
                    width: 1.5
                    rectangle: (self.x, self.y, self.width, self.height) 
            pos_hint: {"top": .7, "left":1}
            size_hint: 1, .6
            GridLayout:
                canvas.after:
                    Line:
                        width: 2
                id: l_recipe
                size_hint_y: None
                cols: 2
                row_default_height: root.height*0.2
                height: self.minimum_height
        GridLayout:
            id: buttons_grid
            cols: 3
            pos_hint: {"top":.1, "left": 1}
            size_hint:1, .1
            ImageButton:
                id: back
                source: "icons/back.png"
                on_release:
                    app.application.change_screen(app, 'recipes')
            ImageButton:
                id: home
                source: 'icons/home.png'
                on_release:
                    app.application.change_screen(app, 'list_recipes')
            ImageButton:
                id: next
                source: "icons/next.png"